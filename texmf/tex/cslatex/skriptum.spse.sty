%Obrázek
% #1 -- umístění obrázky
% #2 -- cesta k obrázku bez přípony
% #3 -- popisek
	\newcommand{\obrazek}[3][htp]{%
	\begin{figure}[#1]\begin{center}
	\includegraphics{#2}
	\caption{#3}
	\label{obr:#2}
	\end{center}\end{figure}
	}

%Obrázek s nastavitelnou šířkou
% #1 -- umístění obrázku: htp
% #2 -- cesta k obrázku bez přípony
% #3 -- šířka obrázku
% #4 -- popisek
	\newcommand{\obrazeksirka}[4][htp]{%
	\begin{figure}[#1]\begin{center}
	\includegraphics[width=#3\textwidth]{#2}
	\caption{#4}
	\label{obr:#2}
	\end{center}\end{figure}
	}

