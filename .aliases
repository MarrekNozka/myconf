##### Glogal aliases ##########

# enable color support of ls and also add handy aliases
if [ "$TERM" != "dumb" ]; then
    eval "`dircolors -b`"
    alias ls='ls --color=auto -F'
fi

# some more ls aliases
alias l='ls -CFm'
alias ll='ls -lFh'
alias la='ls -AF'
alias lla='ls -AFlh'
alias lld='ls -ld'
lsd () { ls -ld $* && ls -l $*; }
alias lsX='ls -X'
alias lsS='ls -S'
alias lst='ls -t'
alias llt='ll -t'

alias ip6='ip -6'
alias less='less --ignore-case'

# disk
alias df='df -h'
alias du='du -h'
alias duu='du -hs'

alias cpv='cp -v'
alias cpr='cp -R'
alias cprv='cp -Rv'
alias cpvr='cp -Rv'

mkdircd () { mkdir -p $1 && cd $1; }

# proceses
psg () { ps ax | grep $* | grep -v grep; }

killg () { kill -9 $(ps ax | grep $* | grep -v grep | cut -d" " -f1,2;) }

alias ps.='ps fux'
alias pss='ps.'
