activate() {
    work=$PWD
    if [ $1 ] && [ -d $1 ]; then
        cd $1
        change=change
    elif [ $1 ] && ! [ -d $1 ]; then
        print "activate: $1 není adresář" >/dev/stderr
        return 1
    fi
    one=$(ls ./venv[_-]*/bin/activate | wc -l)
    if [[ $one != 0 ]]; then
        src=$(ls ./venv[_-]*/bin/activate)
    fi
    if [[ $one == 1 ]] && [ -f $src ]; then
        source $src
    else
        if [ $change ]; then
            cd $work 
        fi
        print "activate: nepodařilo se mi najít virtuální prostředí" \
               >/dev/stderr
        return 1
    fi
    unset work
    unset change
    unset one
    unset src
}
