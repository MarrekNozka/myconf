bindsym $mod+Shift+r restart
# exit i3 (logs you out of your X session)
bindsym $mod+Shift+e exec "i3-nagbar -f -*-terminus-medium-r-*-*-14-*-*-*-*-*-iso10646-1 -t warning -m 'Fakt chceš odejít?' -b 'Jo!' 'i3-msg exit'"
    

# resize window (you can also use the mouse for that)
mode "resize" {
        # These bindings trigger as soon as you enter the resize mode

        # Pressing left will shrink the window’s width.
        # Pressing right will grow the window’s width.
        # Pressing up will shrink the window’s height.
        # Pressing down will grow the window’s height.
        bindsym h resize shrink width 7 px or 7 ppt
        bindsym j resize grow height 7 px or 7 ppt
        bindsym k resize shrink height 7 px or 7 ppt
        bindsym l resize grow width 7 px or 7 ppt

        # same bindings, but for the arrow keys
        bindsym Left resize shrink width 7 px or 7 ppt
        bindsym Down resize grow height 7 px or 7 ppt
        bindsym Up resize shrink height 7 px or 7 ppt
        bindsym Right resize grow width 7 px or 7 ppt

        # back to normal: Enter or Escape
        bindsym Return mode "default"
        bindsym Escape mode "default"
}

bindsym $mod+r mode "resize"

# Start i3bar to display a workspace bar (plus the system information i3status
# finds out, if available)
#
bar {
    status_command i3blocks -c ~/.i3/i3blocks_primary.conf
    output $primary
    position top
    tray_output primary
    font -*-terminus-medium-r-*-*-17-*-*-*-*-*-iso10646-1
    separator_symbol "|"
    workspace_buttons yes
    strip_workspace_numbers yes

   colors {
        #background #000000
        #statusline #ffffff
        #separator #666666
        ## class            border  backgr. text
        #focused_workspace  #4c7899 #285577 #ffffff
        #active_workspace   #333333 #5f676a #ffffff
        #inactive_workspace #333333 #222222 #888888
        #urgent_workspace   #2f343a #900000 #ffffff
        #binding_mode       #2f343a #900000 #ffffff

        background #444444
        statusline #ffffff
        separator  #bf3eff
        # class            border  backgr. text
        focused_workspace  #aa1100 #801504 #ffffff
        active_workspace   #aaaaaa #5f676a #ffffff
        inactive_workspace #aaaaaa #222222 #aaaaaa
        urgent_workspace   #2f343a #cd7600 #ffffff
    }
}
