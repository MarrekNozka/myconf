set $jumpapp "jumpapp: (v)ivaldi (c)laws (z)im (j)upyter"

mode jumpapp {
    bindsym v exec jump.sh vivaldi; mode "default"
    bindsym c exec jump.sh claws-mail; mode "default"
    bindsym m exec jump.sh claws-mail; mode "default"
    bindsym z exec jump.sh zim; mode "default"
    bindsym j exec jump.sh jupyter-qtconsole --existing; mode "default"
    bindsym r exec jump.sh -t root kitty; mode "default"
    bindsym p exec jump.sh password-gorilla; mode "default"
    bindsym t exec jump.sh telegram-desktop; mode "default"
    bindsym a       exec jump.sh pavucontrol -t 2 ; mode "default"
    bindsym Shift+a exec jump.sh pavucontrol ; mode "default"

    bindsym x exec apwal; mode "default"

    # back to normal: Enter or Escape
    bindsym Return mode "default"
    bindsym Escape mode "default"
}
bindsym $mod+x mode jumpapp




