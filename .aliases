dodf() {
    while df /media/karlik /media/sd{a,b,c,d}{,1,2,3} / /storage /home 2>/dev/null |\
          sort   |\
          uniq   |\
          grep / |\
          awk '{printf("%6s%6s%6s%4s  %s\n",  $2,$3,$4, $5,$6)}'; do
        sleep 7
        clear
        echo
        date +"%A %_d.%b %Y %_H:%M"
        echo
        date +"%_V. týden, %_j. den v roce"
        printf "\n%6s%6s%6s%4s %s\n" Celkem Užito Volno "%"
    done
}


