%%%%                                     V Olomouci 14. dubna 2011
%  \dne{}
\newcommand{\dne}[1]{\par\hfill #1\par\bigskip\bigskip}

% \adresát
\newcommand{\adresat}[1]{\par\bigskip\par%
    \noindent \large \textbf{#1} \par\smallskip
}
% oslovaní
\newcommand{\osloveni}[1]{%
    #1% 
    \par%
    \medskip%
    \par%
    \noindent%
    \ignorespaces%
}


\newcommand{\Kc}[1]{#1\,Kč}

% naše značka, vaše značka Horizontálně
\newcommand{\znackaH}[2]{%
    \begin{tabbing}
        \textbf{Vše značka}\hspace{1in}\= 
        \textbf{Naše značka}\hspace{0.5in} \= 
        \textbf{Vyžizuje} \hspace{0.7in}\= 
        \textbf{V Olomouci dne}   \\
        {\small#1} \> 
        {\small #2} \> 
        {\small Ing.\,Marek Nožka} 
        \> {\small \today} \\
    \end{tabbing}
}
% naše značka, vaše značka Vertikálně
\newcommand{\znackaV}[2]{%
    \begin{tabbing}
        \textbf{Vše značka:}\hspace{0.5in} \= #1 \\
        \textbf{Naše značka:} \> #2 \\ 
        \textbf{Vyžizuje:} \> Ing.\,Marek Nožka \\
        \textbf{Datum:}\> {\small \today} \\
    \end{tabbing}
}

% \adresaR
\newcommand{\adresaR}[1]{%
    \par\hspace{\fill}\parbox{0.4\textwidth}{%
        \noindent #1%
    }
}

%%% Věc
\newcommand{\Vec}[1]{\par\section*{{\sc Věc:} #1}\par}

%%%% \datum{3}{4}{1981}
\newcommand{\datum}[3]{#1.\,#2.\,#3}

%%%%
\newcommand{\podpis}[1]{%
    \bigskip
    \bigskip
    \bigskip
    \hfill \hfill \hfill #1 \hspace*{\fill}
}

%%%%

\newcommand{\kdeKdyPodpis}[3]{%
    \bigskip\noindent#1 #2\par
    \podpis{#3}
}

\newcommand{\kdePodpis}[3]{%
    \bigskip\noindent#1 \today \par
    \podpis{#2}
}

%%%%
\newcommand{\spozdravem}[1]{%
\bigskip
\bigskip
\hspace{\parindent}S pozdravem\par
\podpis{#1}
}

