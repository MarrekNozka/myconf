# resize window (you can also use the mouse for that)
mode "resize" {
        # These bindings trigger as soon as you enter the resize mode

        # Pressing left will shrink the window’s width.
        # Pressing right will grow the window’s width.
        # Pressing up will shrink the window’s height.
        # Pressing down will grow the window’s height.
        bindsym h resize shrink width 7 px or 7 ppt
        bindsym j resize grow height 7 px or 7 ppt
        bindsym k resize shrink height 7 px or 7 ppt
        bindsym l resize grow width 7 px or 7 ppt

        # same bindings, but for the arrow keys
        bindsym Left resize shrink width 7 px or 7 ppt
        bindsym Right resize grow width 7 px or 7 ppt
        bindsym Down resize shrink height 7 px or 7 ppt
        bindsym Up resize grow height 7 px or 7 ppt

        bindsym Shift+Left resize shrink width 3 px or 1 ppt
        bindsym Shift+Right resize grow  width 3 px or 1 ppt
        bindsym Shift+Down resize shrink  height 3 px or 1 ppt
        bindsym Shift+Up resize grow  height 3 px or 1 ppt

        # back to normal: Enter or Escape
        bindsym Return mode "default"
        bindsym Escape mode "default"
}

bindsym $mod+r mode "resize"

# Start i3bar to display a workspace bar (plus the system information i3status
# finds out, if available)
#
bar {
    status_command py3status -c $STATUS_CONFFILE
    output $primary
    position top
    # tray_output primary  # u některých GK je to potřeba zadat takto
    tray_output $primary
    font $STATUS_FONT
    separator_symbol "|"
    workspace_buttons yes
    strip_workspace_numbers yes

   colors {
        background #444444
        statusline #ffffff
        separator  #bf3eff
        # class            border  backgr. text
        focused_workspace  #aa1100 #801504 #ffffff
        active_workspace   #aaaaaa #5f676a #ffffff
        inactive_workspace #aaaaaa #222222 #aaaaaa
        urgent_workspace   #2f343a #cd7600 #ffffff
    }
}
